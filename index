        'מ': 'מַזָּל טוֹב יְלַוֶּה אוֹתָךְ בְּכָל אֲשֶׁר תִּפְנִי',
        'נ': 'נַחַת וְשַׁלְוָה יִשְׁרוּ בְּאָהָלֵךְ',
        'ס': 'סֶגּוּלוֹת טוֹבוֹת יִתְגַּלּוּ בָּךְ',
        'ע': 'עֹשֶׁר וְכָבוֹד יִמְצְאוּ דַּרְכָּם אֵלַיִךְ',
        'פ': 'פְּרִי הַצְלָחָה תִּקְצֹרִי מִכָּל מַעֲשַׂיִךְ',
        'צ': 'צְדָקָה וָחֶסֶד יִהְיוּ נֵר לְרַגְלַיִךְ',
        'ק': 'קְדֻשָּׁה וְטָהֳרָה יַעֲטְפוּ אוֹתָךְ',
        'ר': 'רַחֲמִים וְאַהֲבָה יִמְלְאוּ אֶת לִבֵּךְ',
        'ש': 'שָׁלוֹם וְשַׁלְוָה יִשְׁכְּנוּ בְּבֵיתֵךְ',
        'ת': 'תּוֹרָה וּמִצְווֹת יִהְיוּ נֵר לְרַגְלַיִךְ'
      };

      const generateBlessing = () => {
        if (name === '') return;
        const letters = name.split('');
        const blessings = letters.map(letter => {
          if (gender === 'boy') {
            return boyBlessings[letter] || '';
          } else if (gender === 'girl') {
            return girlBlessings[letter] || '';
          }
          return '';
        });
        setBlessing(blessings.join('\n'));
      };

      return (
        <div className="container mx-auto max-w-3xl p-4">
          <div className="text-center mb-8">
            <h1 className="text-4xl font-bold mb-4">מחולל הברכות של הדסה</h1>
            <p className="text-lg">הכניסו את השם ואת מגדר הילד/ה ליצירת ברכה ייחודית</p>
          </div>
          <div className="flex flex-col items-center">
            <div className="mb-4">
              <label className="block text-lg font-medium mb-2">שם הילד/ה</label>
              <input 
                type="text" 
                className="w-full p-2 border border-gray-300 rounded-md" 
                value={name}
                onChange={(e) => setName(e.target.value)}
              />
            </div>
            <div className="mb-4">
              <label className="block text-lg font-medium mb-2">מגדר</label>
              <select 
                className="w-full p-2 border border-gray-300 rounded-md"
                value={gender}
                onChange={(e) => setGender(e.target.value)}
              >
                <option value="">בחר מגדר</option>
                <option value="boy">ילד</option>
                <option value="girl">ילדה</option>
              </select>
            </div>
            <button 
              className="bg-blue-500 text-white px-4 py-2 rounded-md"
              onClick={generateBlessing}
            >
              צור ברכה
            </button>
            {blessing && (
              <div className="mt-8 p-4 border border-gray-300 rounded-md whitespace-pre-wrap">
                {blessing}
              </div>
            )}
          </div>
        </div>
      );
    };

    ReactDOM.render(<AcrosticBlessingGenerator />, document.getElementById('root'));
  </script>
